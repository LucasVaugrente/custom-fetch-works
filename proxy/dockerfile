# Use official Node.js LTS image as base
FROM node:20

# Create app directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json if you have them
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Expose the port the proxy runs on
EXPOSE 3001

# Default command
CMD ["node", "proxy.js", "3001", "http://localhost:3000", "http://localhost:4001/sparql"]
